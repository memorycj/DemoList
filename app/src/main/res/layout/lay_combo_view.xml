<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/holo_green_light"
    >


    <Space
        android:id="@+id/top_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@+id/circle_bg"
        app:layout_constraintEnd_toEndOf="@+id/circle_bg"
        app:layout_constraintStart_toStartOf="@+id/circle_bg"

        />


    <View
        android:id="@+id/prog"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:background="@drawable/combo_prog_1"
        app:layout_constraintBottom_toTopOf="@+id/top_space"
        app:layout_constraintEnd_toEndOf="@+id/circle_bg"
        app:layout_constraintStart_toStartOf="@+id/circle_bg" />

    <ImageView
        android:id="@+id/circle_bg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/combo_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/rose"
        app:layout_constraintBottom_toBottomOf="@+id/circle_bg"
        app:layout_constraintEnd_toEndOf="@+id/circle_bg"
        app:layout_constraintStart_toStartOf="@+id/circle_bg"
        app:layout_constraintTop_toTopOf="@+id/circle_bg" />



    <Space
        android:id="@+id/bottom_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@+id/prog"
        app:layout_constraintEnd_toEndOf="@+id/circle_bg"
        app:layout_constraintStart_toStartOf="@+id/circle_bg"

        />


    <ImageView
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/number_bg"
        app:layout_constraintBottom_toTopOf="@+id/bottom_space"
        app:layout_constraintEnd_toEndOf="@+id/circle_bg"
        app:layout_constraintStart_toStartOf="@+id/circle_bg"
        />



    <TextView
        android:id="@+id/combo_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_space"
        app:layout_constraintEnd_toEndOf="@+id/circle_bg"
        app:layout_constraintStart_toStartOf="@+id/circle_bg"
        tools:text="15"
        />

</androidx.constraintlayout.widget.ConstraintLayout>