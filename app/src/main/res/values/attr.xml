<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="GradientTextView">
        <attr name="lineNumber" format="integer"></attr>
        <attr name="showTime" format="integer"></attr>
        <attr name="textColor" format="color"></attr>
        <attr name="hasColorAnimation" format="boolean"></attr>
        <attr name="showStyle">
            <enum name="UNIDIRECTION" value="0"></enum>
            <enum name="TWOWAY" value="1"></enum>
        </attr>
        <attr name="tileMode">
            <enum name="CLAMP" value="0"></enum>
            <enum name="REPEAT" value="1"></enum>
            <enum name="MIRROR" value="2"></enum>
        </attr>

    </declare-styleable>
</resources>